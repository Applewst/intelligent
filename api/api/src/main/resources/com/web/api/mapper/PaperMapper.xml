<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.api.mapper.PaperMapper">
    <insert id="addPaper">
        insert into paper (title, author,time , file, detail)
        values (#{title}, #{author}, #{time}, #{file}, #{detail})
    </insert>

    <update id="updatePaper">
        update paper
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="file != null and file != ''">
                file = #{file},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deletePaper">
        delete from
            paper
        where
            id = #{id}
    </delete>

    <select id="getAllPapers" resultType="com.web.api.pojo.Paper">
        select *
        from paper
        <where>
            <if test="name != null and name != ''">
                title like concat('%', #{name}, '%')
            </if>
            <if test="author != null and author != ''">
                AND author like concat('%', #{author}, '%')
            </if>
        </where>
    </select>
    <select id="existsById" resultType="java.lang.Boolean">
        select
            exists (
                select 1
                from
                    paper
                where
                    id = #{id}
        )
    </select>
</mapper>