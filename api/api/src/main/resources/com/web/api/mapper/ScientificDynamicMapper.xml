<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.api.mapper.ScientificDynamicMapper">
    <select id="selectNewDynamics" resultType="com.web.api.pojo.ScientificDynamic">
        select *
        from scientific_dynamic
        order by time DESC
        limit #{num}
    </select>

    <select id="getAllDynamics" resultType="com.web.api.pojo.ScientificDynamic">
        select *
        from scientific_dynamic
    </select>
    <select id="getDynamicslist" resultType="com.web.api.pojo.ScientificDynamic">
        select *
        FROM scientific_dynamic
        ORDER BY time DESC
        limit #{start}, #{pageSize}
    </select>
    <delete id="deleteDynamics">

        delete
        from scientific_dynamic
        where id = #{id}
    </delete>
    <update id="updateDynamics">
        UPDATE scientific_dynamic
        <set>
            <if test="image != null and image != ''">image = #{image},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="detail != null and detail != ''">detail = #{detail},</if>
            <if test="time != null">`time` = #{time},</if>
        </set>
        WHERE id = #{id}
    </update>
    <select id="pageQuery" resultType="com.web.api.pojo.ScientificDynamic">
        select * from scientific_dynamic
        <where>
            <if test="title != null and title !='' ">
                and title like concat('%',#{title},'%')
            </if>
        </where>
    </select>
</mapper>